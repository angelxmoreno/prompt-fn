{
    "name": "prompt-fn",
    "version": "0.1.0",
    "module": "src/index.ts",
    "type": "module",
    "scripts": {
        "prepare": "lefthook install",
        "test": "bun test",
        "test:coverage": "bun test --coverage --coverage-reporter=lcov",
        "lint": "bun lint:code && bun lint:md",
        "lint:fix": "bun lint:code:fix && bun lint:md:fix",
        "lint:code": "biome check ",
        "lint:code:fix": "biome check --write ",
        "lint:md": "remark . --frail",
        "lint:md:fix": "remark . --output",
        "check-types": "tsc --noEmit",
        "codacy:report": "./scripts/fetch-codacy-issues.sh",
        "docs": "typedoc",
        "docs:watch": "typedoc --watch",
        "docs:site:sync": "bun scripts/docs-predeploy.ts",
        "docs:site:dev": "bun run docs:site:sync && bun --cwd docs-site start",
        "docs:site:build": "bun run docs:site:sync && bun --cwd docs-site build",
        "docs:site:deploy": "bun run docs:site:sync && GIT_USER=angelxmoreno USE_SSH=true bun --cwd docs-site deploy"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/angelxmoreno/prompt-fn.git"
    },
    "homepage": "https://prompt-fn.axmdev.app",
    "dependencies": {
        "ai": "^6.0.14",
        "eta": "^4.5.0",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.3",
        "prompt-fn": ".",
        "zod": "^4.3.5"
    },
    "devDependencies": {
        "@ai-sdk/google": "^3.0.5",
        "@ai-sdk/openai": "^3.0.7",
        "@biomejs/biome": "^2.3.11",
        "@commitlint/cli": "^20.3.0",
        "@commitlint/config-conventional": "^20.3.0",
        "@types/bun": "^1.3.5",
        "ai-sdk-ollama": "^3.0.1",
        "lefthook": "^2.0.13",
        "remark-cli": "^12.0.1",
        "remark-frontmatter": "^5.0.0",
        "remark-lint-maximum-line-length": "^4.1.1",
        "remark-lint-no-dead-urls": "^2.0.1",
        "remark-preset-lint-recommended": "^7.0.1",
        "rimraf": "^6.1.2",
        "typedoc": "^0.28.15",
        "typedoc-plugin-markdown": "^4.9.0",
        "typescript": "^5.9.3"
    }
}
